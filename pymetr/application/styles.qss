/* styles.qss */
QMainWindow {
    background-color: #1E1E1E;
    color: #EEEEEE;
}

QToolBar {
    background-color: #2A2A2A; /* Set the toolbar background color */
    spacing: 10px; /* This tries to add spacing between actions, might not work as expected */
}

QToolBar QToolButton {
    background-color: #2A2A2A;
    border: none;
    padding: 8px;
    color: #EEEEEE;
    margin: 2px; /* Adjust margin to add space between buttons */
}

QToolBar QToolButton:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}

QToolBar QToolButton:checked {
    background-color: #3E3E3E;
    color: #fff;
}

QTabWidget::pane {
    border: none;
    background: #1E1E1E;
    margin: 6px;
}

QTabBar::tab {
    background: #2A2A2A;
    color: #EEEEEE;
    padding: 8px;
    border: none;
    border-bottom: 2px solid transparent;
    margin: 0px 2px;
}

QTabBar::tab:selected {
    background: #3E3E3E;
    color: #fff;
    border-bottom: 2px solid #5E57FF;
}

QPushButton {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border-radius: 3px;
    padding: 1px 12px;
    height: 22px;
}

QLabel {
    color: #EEEEEE;
}

/* ComboBox Styles */
QComboBox {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 3px;
    padding: 1px 12px;
    height: 22px;
    min-width: 80px; /* Ensure all text is visible */
}

QComboBox::drop-down {
    background: #2A2A2A;
    border-left: 1px solid #3E3E3E;
}

QComboBox QAbstractItemView {
    background-color: #2A2A2A;
    color: #EEEEEE;
    selection-background-color: #5E57FF;
    selection-color: #FFFFFF;
    border-radius: 3px;
}

/* QTextEdit Styles */
QTextEdit {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    height: 22px;
    padding: 4px;
}

QLineEdit:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}

QSpinBox {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    height: 22px;
    padding: 1px; 
}

QSpinBox:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}

QDoubleSpinBox {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    padding: 1px;
    height: 22px;
}

QDoubleSpinBox:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}



/* Hover effects for interactive elements */
QPushButton:hover, QComboBox:hover, QCheckBox:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}

QGroupBox::title {
    color: #EEEEEE; /* Adjust the color as needed */
}

QMenuBar {
    background-color: #1E1E1E;
    color: #EEEEEE; /* Adjust the color as needed */
}

QMenuBar::item {
    background: transparent;
}

QMenuBar::item:selected {
    background-color: #3E3E3E;
    color: #EEEEEE; /* Adjust the color as needed */
}

QSplitter::handle {
    background-color: #1E1E1E;
    width: 4px;
}

QSplitter::handle:hover {
    background-color: #5E57FF;
}

QDockWidget::separator {
    background-color: #2A2A2A;
    width: 2px;
    padding: 0px;
}

QDockWidget::separator:hover {
    background-color: #5E57FF;
}

QDockWidget#toggleDock {
    background-color: #3E3E3E;  /* Set the desired background color */
}

QTreeWidget {
    background-color: #1E1E1E;
    color: #EEEEEE;
    border: 1px;
}

QTreeWidget::item {
    padding: 0px;
    border: 1px solid transparent;
}

QTreeWidget::item:hover {
    background-color: #3E3E3E;
    border: 1px solid #5E57FF;
}

QTreeWidget::item:selected {
    background-color: #5E57FF;
    color: #EEEEEE;
}

QTreeWidget::item:has-children {
    background-color: #2A2A2A;
    color: #EEEEEE;
}

QTreeWidget::item:!selected:hover {
    background: #3E3E3E;
}

QTreeWidget::item:!selected:hover:active {
    background: #4E4E4E;
}

QTreeWidget::item:selected:hover {
    background: #6E67FF;
}

QTreeWidget::item:selected:hover:active {
    background: #7E77FF;
}

QListWidget {
    background-color: #1E1E1E; 
    show-decoration-selected: 0;
    border: 0px;
}

QListWidget::item {
    color: #EEEEEE;
    border-radius: 4px; 
    margin: 1px 0; 
}

QListWidget::item:hover {
    background-color: #111111;
    border: 1px solid #5E57FF;
}

/* Make the selected item pop */
QListWidget::item:selected {
    background-color: #2E2E2E;
    border: 1px solid #5E57FF;
}

QListWidget QTextEdit {
    background-color: #2A2A2A;
    color: #EEEEEE;
    border: 1px solid #3E3E3E;
    border-radius: 4px;
    padding: 1px;
}

/* Style the scrollbar to match */
QScrollBar:vertical {
    border: 1px solid #2A2A2A;
    background: #1E1E1E;
    width: 15px;
    margin: 22px 0 22px 0;
}

QScrollBar::handle:vertical {
    background: #5E57FF;
    min-height: 20px;
}

QScrollBar::add-line:vertical {
    border: none;
    background-color: #2A2A2A;
    height: 20px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
    border: none;
    background-color: #2A2A2A;
    height: 20px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}